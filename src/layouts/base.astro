---
// import { ViewTransitions } from 'astro:transitions'
import type { CollectionEntry } from 'astro:content'
import SEO from '../components/seo.astro'
import Header from '../components/header.astro'
import Footer from '../components/footer.astro'
import Gallery from '../components/gallery.astro'
import { SiteMetadata } from '../config'

export interface Props {
  frontmatter: CollectionEntry<'blog'>['data'] | CollectionEntry<'page'>['data']
  schema?: string
}

const { frontmatter, schema = 'WebPage' } = Astro.props
---

<!doctype html>
<html lang='en' itemscope itemtype={`https://schema.org/${schema}`}>
  <head>
    <meta charset='UTF-8' />
    <!-- <meta
      http-equiv='Content-Security-Policy'
      content="default-src * 'unsafe-eval' 'unsafe-inline'; object-src 'none'"
    />
    <meta http-equiv='Referrer-Policy' content='no-referrer, strict-origin-when-cross-origin' /> -->
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' href={`${Astro.site}favicon.ico`} sizes='any' />
    <link rel='icon' href={`${Astro.site}favicon.svg`} type='image/svg+xml' />
    <link rel='apple-touch-icon' href={`${Astro.site}apple-touchicon.png`} />
    <link rel='manifest' href={`${Astro.site}site.webmanifest`} />
    <link rel='sitemap' href={`${Astro.site}sitemap-indexxml`} />
    <link rel='alternate' type='application/rss+xml' title={SiteMetadata.title} href={`${Astro.site}rss.xml`} />
    <meta name='generator' content={Astro.generator} />
    <SEO frontmatter={frontmatter} />
    <!-- <ViewTransitions /> -->
    <script is:inline>
      const setDarkMode = () => {
        if (
          localStorage.theme === 'dark' ||
          (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)
        ) {
          document.documentElement.classList.add('dark')
        } else {
          document.documentElement.classList.remove('dark')
        }
      }
      setDarkMode() //initial navigation
      document.addEventListener('astro:after-swap', setDarkMode) // Runs on view transitions navigation
    </script>
    <style is:inline>
      [x-cloak] {
        display: none !important;
      }
      .markmap > svg {
        width: 100%;
        height: 400px;
      }
    </style>
    <style is:global>
      /* Register your custom font family and tell the browser where to find it. */
      @font-face {
        font-family: 'Indivisible';
        src: url('../../public/fonts/Indivisible-ThinItalic.eot');
        src: local('Indivisible Thin Italic'), local('Indivisible-ThinItalic'),
            url('../../public/fonts/Indivisible-ThinItalic.eot?#iefix') format('embedded-opentype'),
            url('../../public/fonts/Indivisible-ThinItalic.woff2') format('woff2'),
            url('../../public/fonts/Indivisible-ThinItalic.woff') format('woff'),
            url('../../public/fonts/Indivisible-ThinItalic.ttf') format('truetype');
        font-weight: 100;
        font-style: italic;
      }

      @font-face {
          font-family: 'Indivisible';
          src: url('../../public/fonts/Indivisible-MediumItalic.eot');
          src: local('Indivisible Medium Italic'), local('Indivisible-MediumItalic'),
              url('../../public/fonts/Indivisible-MediumItalic.eot?#iefix') format('embedded-opentype'),
              url('../../public/fonts/Indivisible-MediumItalic.woff2') format('woff2'),
              url('../../public/fonts/Indivisible-MediumItalic.woff') format('woff'),
              url('../../public/fonts/Indivisible-MediumItalic.ttf') format('truetype');
          font-weight: 500;
          font-style: italic;
      }

      @font-face {
          font-family: 'Indivisible';
          src: url('../../public/fonts/Indivisible-Black.eot');
          src: local('Indivisible Black'), local('Indivisible-Black'),
              url('../../public/fonts/Indivisible-Black.eot?#iefix') format('embedded-opentype'),
              url('../../public/fonts/Indivisible-Black.woff2') format('woff2'),
              url('../../public/fonts/Indivisible-Black.woff') format('woff'),
              url('../../public/fonts/Indivisible-Black.ttf') format('truetype');
          font-weight: 900;
          font-style: normal;
      }

      @font-face {
          font-family: 'Indivisible';
          src: url('../../public/fonts/Indivisible-RegularItalic.eot');
          src: local('Indivisible Regular Italic'), local('Indivisible-RegularItalic'),
              url('../../public/fonts/Indivisible-RegularItalic.eot?#iefix') format('embedded-opentype'),
              url('../../public/fonts/Indivisible-RegularItalic.woff2') format('woff2'),
              url('../../public/fonts/Indivisible-RegularItalic.woff') format('woff'),
              url('../../public/fonts/Indivisible-RegularItalic.ttf') format('truetype');
          font-weight: normal;
          font-style: italic;
      }

      @font-face {
          font-family: 'Indivisible';
          src: url('../../public/fonts/Indivisible-Bold.eot');
          src: local('Indivisible Bold'), local('Indivisible-Bold'),
              url('../../public/fonts/Indivisible-Bold.eot?#iefix') format('embedded-opentype'),
              url('../../public/fonts/Indivisible-Bold.woff2') format('woff2'),
              url('../../public/fonts/Indivisible-Bold.woff') format('woff'),
              url('../../public/fonts/Indivisible-Bold.ttf') format('truetype');
          font-weight: bold;
          font-style: normal;
      }

      @font-face {
          font-family: 'Indivisible';
          src: url('../../public/fonts/Indivisible-BoldItalic.eot');
          src: local('Indivisible Bold Italic'), local('Indivisible-BoldItalic'),
              url('../../public/fonts/Indivisible-BoldItalic.eot?#iefix') format('embedded-opentype'),
              url('../../public/fonts/Indivisible-BoldItalic.woff2') format('woff2'),
              url('../../public/fonts/Indivisible-BoldItalic.woff') format('woff'),
              url('../../public/fonts/Indivisible-BoldItalic.ttf') format('truetype');
          font-weight: bold;
          font-style: italic;
      }

      @font-face {
          font-family: 'Indivisible';
          src: url('../../public/fonts/Indivisible-BlackItalic.eot');
          src: local('Indivisible Black Italic'), local('Indivisible-BlackItalic'),
              url('../../public/fonts/Indivisible-BlackItalic.eot?#iefix') format('embedded-opentype'),
              url('../../public/fonts/Indivisible-BlackItalic.woff2') format('woff2'),
              url('../../public/fonts/Indivisible-BlackItalic.woff') format('woff'),
              url('../../public/fonts/Indivisible-BlackItalic.ttf') format('truetype');
          font-weight: 900;
          font-style: italic;
      }

      @font-face {
          font-family: 'Indivisible';
          src: url('../../public/fonts/Indivisible-Light.eot');
          src: local('Indivisible Light'), local('Indivisible-Light'),
              url('../../public/fonts/Indivisible-Light.eot?#iefix') format('embedded-opentype'),
              url('../../public/fonts/Indivisible-Light.woff2') format('woff2'),
              url('../../public/fonts/Indivisible-Light.woff') format('woff'),
              url('../../public/fonts/Indivisible-Light.ttf') format('truetype');
          font-weight: 300;
          font-style: normal;
      }

      @font-face {
          font-family: 'Indivisible';
          src: url('../../public/fonts/Indivisible-SemiBoldItalic.eot');
          src: local('Indivisible SemiBold Italic'), local('Indivisible-SemiBoldItalic'),
              url('../../public/fonts/Indivisible-SemiBoldItalic.eot?#iefix') format('embedded-opentype'),
              url('../../public/fonts/Indivisible-SemiBoldItalic.woff2') format('woff2'),
              url('../../public/fonts/Indivisible-SemiBoldItalic.woff') format('woff'),
              url('../../public/fonts/Indivisible-SemiBoldItalic.ttf') format('truetype');
          font-weight: 600;
          font-style: italic;
      }

      @font-face {
          font-family: 'Indivisible';
          src: url('../../public/fonts/Indivisible-LightItalic.eot');
          src: local('Indivisible Light Italic'), local('Indivisible-LightItalic'),
              url('../../public/fonts/Indivisible-LightItalic.eot?#iefix') format('embedded-opentype'),
              url('../../public/fonts/Indivisible-LightItalic.woff2') format('woff2'),
              url('../../public/fonts/Indivisible-LightItalic.woff') format('woff'),
              url('../../public/fonts/Indivisible-LightItalic.ttf') format('truetype');
          font-weight: 300;
          font-style: italic;
      }

      @font-face {
          font-family: 'Indivisible';
          src: url('../../public/fonts/Indivisible-Medium.eot');
          src: local('Indivisible Medium'), local('Indivisible-Medium'),
              url('../../public/fonts/Indivisible-Medium.eot?#iefix') format('embedded-opentype'),
              url('../../public/fonts/Indivisible-Medium.woff2') format('woff2'),
              url('../../public/fonts/Indivisible-Medium.woff') format('woff'),
              url('../../public/fonts/Indivisible-Medium.ttf') format('truetype');
          font-weight: 500;
          font-style: normal;
      }

      @font-face {
          font-family: 'Indivisible';
          src: url('../../public/fonts/Indivisible-SemiBold.eot');
          src: local('Indivisible SemiBold'), local('Indivisible-SemiBold'),
              url('../../public/fonts/Indivisible-SemiBold.eot?#iefix') format('embedded-opentype'),
              url('../../public/fonts/Indivisible-SemiBold.woff2') format('woff2'),
              url('../../public/fonts/Indivisible-SemiBold.woff') format('woff'),
              url('../../public/fonts/Indivisible-SemiBold.ttf') format('truetype');
          font-weight: 600;
          font-style: normal;
      }

      @font-face {
          font-family: 'Indivisible';
          src: url('../../public/fonts/Indivisible-Thin.eot');
          src: local('Indivisible Thin'), local('Indivisible-Thin'),
              url('../../public/fonts/Indivisible-Thin.eot?#iefix') format('embedded-opentype'),
              url('../../public/fonts/Indivisible-Thin.woff2') format('woff2'),
              url('../../public/fonts/Indivisible-Thin.woff') format('woff'),
              url('../../public/fonts/Indivisible-Thin.ttf') format('truetype');
          font-weight: 100;
          font-style: normal;
      }

      @font-face {
          font-family: 'Indivisible';
          src: url('../../public/fonts/Indivisible-Regular.eot');
          src: local('Indivisible Regular'), local('Indivisible-Regular'),
              url('../../public/fonts/Indivisible-Regular.eot?#iefix') format('embedded-opentype'),
              url('../../public/fonts/Indivisible-Regular.woff2') format('woff2'),
              url('../../public/fonts/Indivisible-Regular.woff') format('woff'),
              url('../../public/fonts/Indivisible-Regular.ttf') format('truetype');
          font-weight: normal;
          font-style: normal;
      }
    </style>
    {
      frontmatter.extra?.includes('math') && (
        <link
          rel='stylesheet'
          href='https://cdn.jsdelivr.net/npm/katex@0.16.7/dist/katex.min.css'
          integrity='sha384-3UiQGuEI4TTMaFmGIZumfRPtfKQ3trwQE2JgosJxCnGmQpL/lJdjpcHkaaFwHlcI'
          crossorigin='anonymous'
        />
      )
    }
    <slot name='in-head' />
  </head>
  <body class='dark:bg-neutral-500'>
    <Header />
    <slot />
    {frontmatter.gallery && <Gallery folder={frontmatter.gallery} />}
    <slot name='before-footer' />
    <Footer />
    {
      frontmatter.extra?.includes('markmap') && (
        <script is:inline data-astro-rerun src='https://cdn.jsdelivr.net/npm/markmap-autoloader' />
      )
    }
    {
      frontmatter.extra?.includes('mermaid') && (
        <script is:inline data-astro-rerun type='module'>
          import mermaid from 'https://cdn.jsdelivr.net/npm/mermaid@10/dist/mermaid.esm.min.mjs';
          mermaid.initialize({ startOnLoad: true });
        </script>
      )
    }
  </body>
</html>
