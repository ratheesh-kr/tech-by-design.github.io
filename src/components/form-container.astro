---
interface Props {
  formSrc: string;
  width?: string;
  height?: string;
}

const { formSrc, width = "100%", height = "500px" } = Astro.props;
---
<div class="flex w-full min-h-screen">
  <iframe
    src={formSrc}
    width={width}
    frameborder="0"
    marginwidth="0"
    marginheight="0"
    style="border: none; max-width:100%; max-height:100vh"
    allowfullscreen
    allowfullscreen
    allowfullscreen
    allowfullscreen
  >
  </iframe>
</div>