---
import { getEntries } from 'astro:content'

const { categories } = Astro.props

const cats = await getEntries(categories)
---

{
  categories && (
    <div class='flex flex-row flex-wrap items-start gap-2 pb-2'>
      {cats.map((category) => (
        <a
          itemprop='articleSection'
          href={`${import.meta.env.BASE_URL}category/${encodeURIComponent(category.slug)}/`}
          class='inline-block rounded bg-spruce-200 px-3 py-1 text-xs font-medium uppercase tracking-tight text-neutral-500 hover:bg-spruce-100'
        >
          {category.data.title}
          <span class='sr-only'>category</span>
        </a>
      ))}
    </div>
  )
}
